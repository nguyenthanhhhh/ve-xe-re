<form method="POST" action="/stations/createPost">
    <h1>Tạo bến xe</h1>
    <div class="form-group">
        <label for="name">Nhập tên nhà ga</label>
        <input type="text" id="nameStation" class="form-control" name="name">

    </div>
    <div class="form-group">
        <label for="address">Nhập địa chỉ</label>
        <input type="text" id="addressStation" class="form-control" name="address">
    </div>


    <div class="form-group">
        <label for="province">Nhập tỉnh</label>
        <input type="text" id="provinceStation" class="form-control" name="province">
    </div>


    <div class="form-group">
        <label for="avatar">Link avatar</label>
        <input type="text" id="avatarStation" class="form-control" name="avatar">
    </div>

    <button type="submit" class="btn btn-primary">Tạo bến</button>
</form>