<form method="POST" action="/trips/createPost">
    <h1>Tạo chuyến đi</h1>
    <div class="form-group">
        <label for="name">Nhập ID ga đi</label>
        <input type="text" id="fromStation" class="form-control" name="fromStation">

    </div>
    <div class="form-group">
        <label for="address">Nhập ID ga đích</label>
        <input type="text" id="toStation" class="form-control" name="toStation">
    </div>


    <div class="form-group">
        <label for="province">Nhập thời gian xuất phát</label>
        <input type="text" id="startTime" class="form-control" name="startTime">
    </div>


    <div class="form-group">
        <label for="avatar">Nhập giá chuyến đi</label>
        <input type="text" id="price" class="form-control" name="price">
    </div>

    <div class="form-group">
        <label for="avatar">Link avatar</label>
        <input type="text" id="avatar" class="form-control" name="avatar">
    </div>

    <button type="submit" class="btn btn-primary">Tạo chuyến đi</button>
</form>